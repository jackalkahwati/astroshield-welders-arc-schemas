{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/reentry.prediction/1.0.0",
  "title": "SS5 Reentry Prediction",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","objectId","prediction"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.reentry.prediction"},
    "objectId": {"type": "string"},
    "prediction": {
      "type": "object",
      "required": ["epoch","lat","lon","uncertainty_km"],
      "properties": {
        "epoch": {"type": "string", "format": "date-time"},
        "lat": {"type": "number"},
        "lon": {"type": "number"},
        "uncertainty_km": {"type": "number", "minimum": 0}
      },
      "additionalProperties": false
    },
    "provenance": {"type": "object", "properties": {"manifestId": {"type": "string"}, "gitSha": {"type": "string"}, "algVersion": {"type": "string"}}, "additionalProperties": false}
  },
  "additionalProperties": false
}

