{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/launch.coplanar-opportunities/1.0.0",
  "title": "SS5 Launch Coplanar Opportunities",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","vehicle","opportunities"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string","format":"date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.launch.coplanar-opportunities"},
    "vehicle": {"type": "string"},
    "opportunities": {
      "type":"array",
      "items": {
        "type":"object",
        "required": ["targetId","windowStart","windowEnd","score"],
        "properties": {
          "targetId": {"type":"string"},
          "windowStart": {"type":"string","format":"date-time"},
          "windowEnd": {"type":"string","format":"date-time"},
          "score": {"type":"number","minimum":0,"maximum":1}
        },
        "additionalProperties": false
      }
    },
    "provenance": {"type":"object","properties":{"manifestId":{"type":"string"},"gitSha":{"type":"string"},"algVersion":{"type":"string"}},"additionalProperties":false}
  },
  "additionalProperties": false
}

