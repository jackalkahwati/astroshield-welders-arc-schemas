{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/separation.fused/1.0.0",
  "title": "SS5 Separation Fused",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","events","provenance"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.separation.fused"},
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["primaryId","secondaryId","tca","missDistance_m","pc","confidence"],
        "properties": {
          "primaryId": {"type": "string"},
          "secondaryId": {"type": "string"},
          "tca": {"type": "string"},
          "missDistance_m": {"type": "number"},
          "pc": {"type": "number", "minimum": 0, "maximum": 1},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        },
        "additionalProperties": false
      }
    },
    "provenance": {"type": "object", "properties": {"manifestId": {"type": "string"}, "gitSha": {"type": "string"}, "algVersion": {"type": "string"}}, "additionalProperties": false}
  },
  "additionalProperties": false
}

