{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/maneuver.detected/1.0.0",
  "title": "SS5 Maneuver Detected (output)",
  "type": "object",
  "required": [
    "schemaVersion",
    "messageId",
    "timeGenerated",
    "producer",
    "eventType",
    "objectId",
    "epoch",
    "deltaV_kms",
    "evidence",
    "provenance"
  ],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.maneuver.detected"},
    "objectId": {"type": "string"},
    "epoch": {"type": "string", "format": "date-time"},
    "deltaV_kms": {"type": "array", "items": {"type": "number"}, "minItems": 3, "maxItems": 3},
    "evidence": {
      "type": "object",
      "required": ["residualType", "prePostFitDelta", "confidence"],
      "properties": {
        "residualType": {"type": "string"},
        "prePostFitDelta": {"type": "number"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1}
      },
      "additionalProperties": false
    },
    "provenance": {
      "type": "object",
      "required": ["manifestId", "gitSha", "algVersion"],
      "properties": {
        "manifestId": {"type": "string"},
        "gitSha": {"type": "string"},
        "containerDigest": {"type": "string"},
        "inputMessageIds": {"type": "array", "items": {"type": "string"}},
        "algVersion": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



