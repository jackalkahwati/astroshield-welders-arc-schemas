{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/launch.site-monitor/1.0.0",
  "title": "SS5 Launch Site Monitor",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","site","status"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string","format":"date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.launch.site-monitor"},
    "site": {"type": "string"},
    "status": {"type": "string", "enum": ["nominal","active","hold","scrub","unknown"]},
    "provenance": {"type":"object","properties":{"manifestId":{"type":"string"},"gitSha":{"type":"string"},"algVersion":{"type":"string"}},"additionalProperties":false}
  },
  "additionalProperties": false
}

