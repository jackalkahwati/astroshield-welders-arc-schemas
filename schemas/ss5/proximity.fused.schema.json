{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/proximity.fused/1.0.0",
  "title": "SS5 Proximity Fused",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","pairs","provenance"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.proximity.fused"},
    "pairs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["primaryId","secondaryId","tca","missDistance_m","pc","confidence"],
        "properties": {
          "primaryId": {"type": "string"},
          "secondaryId": {"type": "string"},
          "tca": {"type": "string"},
          "missDistance_m": {"type": "number"},
          "pc": {"type": "number", "minimum": 0, "maximum": 1},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        },
        "additionalProperties": false
      }
    },
    "provenance": {
      "type": "object",
      "required": ["manifestId","gitSha","algVersion"],
      "properties": {
        "manifestId": {"type": "string"},
        "gitSha": {"type": "string"},
        "containerDigest": {"type": "string"},
        "inputMessageIds": {"type": "array", "items": {"type": "string"}},
        "algVersion": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

