{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/launch.polygon-closures/1.0.0",
  "title": "SS5 Launch Polygon Closures",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","area","validWindow"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.launch.polygon-closures"},
    "area": {"type": "string", "description": "GeoJSON polygon string or WKT"},
    "validWindow": {
      "type": "object",
      "required": ["start","end"],
      "properties": {
        "start": {"type": "string", "format": "date-time"},
        "end": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    },
    "reason": {"type": "string"}
  },
  "additionalProperties": false
}

