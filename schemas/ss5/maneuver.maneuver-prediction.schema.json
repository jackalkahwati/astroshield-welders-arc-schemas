{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/maneuver.maneuver-prediction/1.0.0",
  "title": "SS5 Maneuver Prediction",
  "type": "object",
  "required": ["schemaVersion","messageId","timeGenerated","producer","eventType","objectId","window","candidates"],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.maneuver.maneuver-prediction"},
    "objectId": {"type": "string"},
    "window": {
      "type": "object",
      "required": ["start","end"],
      "properties": {
        "start": {"type": "string", "format": "date-time"},
        "end": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["epoch","deltaV_kms","confidence"],
        "properties": {
          "epoch": {"type": "string", "format": "date-time"},
          "deltaV_kms": {"type": "array", "items": {"type": "number"}, "minItems": 3, "maxItems": 3},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        },
        "additionalProperties": false
      }
    },
    "provenance": {
      "type": "object",
      "properties": {
        "manifestId": {"type": "string"},
        "gitSha": {"type": "string"},
        "algVersion": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

