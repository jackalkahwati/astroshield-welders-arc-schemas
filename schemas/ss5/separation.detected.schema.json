{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroshield.com/schemas/ss5/separation.detected/1.0.0",
  "title": "SS5 Separation Detected (output)",
  "type": "object",
  "required": [
    "schemaVersion",
    "messageId",
    "timeGenerated",
    "producer",
    "eventType",
    "primaryId",
    "secondaryId",
    "tca",
    "missDistance_m",
    "relativeSpeed_mps",
    "pc",
    "hardBodyRadius_m",
    "thresholds",
    "provenance"
  ],
  "properties": {
    "schemaVersion": {"const": "1.0.0"},
    "messageId": {"type": "string"},
    "timeGenerated": {"type": "string", "format": "date-time"},
    "producer": {"type": "string"},
    "eventType": {"const": "ss5.separation.detected"},
    "primaryId": {"type": "string"},
    "secondaryId": {"type": "string"},
    "tca": {"type": "string"},
    "missDistance_m": {"type": "number"},
    "relativeSpeed_mps": {"type": "number"},
    "pc": {"type": "number", "minimum": 0, "maximum": 1},
    "hardBodyRadius_m": {"type": "number", "minimum": 0},
    "thresholds": {
      "type": "object",
      "required": ["pcExceeded", "missDistanceBelow_m"],
      "properties": {
        "pcExceeded": {"type": "boolean"},
        "missDistanceBelow_m": {"type": "number"}
      },
      "additionalProperties": false
    },
    "classification": {
      "type": "object",
      "required": ["indicator", "confidence", "ruleId"],
      "properties": {
        "indicator": {"type": "string"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "ruleId": {"type": "string"},
        "notes": {"type": "string"}
      },
      "additionalProperties": false
    },
    "provenance": {
      "type": "object",
      "required": ["manifestId", "gitSha", "inputMessageIds", "algVersion"],
      "properties": {
        "manifestId": {"type": "string"},
        "gitSha": {"type": "string"},
        "containerDigest": {"type": "string"},
        "inputMessageIds": {"type": "array", "items": {"type": "string"}},
        "algVersion": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



